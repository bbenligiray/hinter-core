{
  "name": "hinter-core",
  "version": "0.0.1",
  "description": "A terminal application that implements the hinter protocol, enabling users to exchange reports in a P2P manner",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/hinter-net/hinter-core"
  },
  "main": "index.js",
  "type": "module",
  "pear": {
    "name": "hinter-core",
    "type": "terminal"
  },
  "scripts": {
    "docker:build": "docker build -t hinter-core .",
    "docker:generate-keys": "docker run -it --rm -v .:/app hinter-core npm run generate-keys",
    "docker:start": "docker run -it --rm -v ./peers:/app/peers -v ./.env:/app/.env hinter-core",
    "generate-keys": "pear run generate-keys.js",
    "start": "pear run ."
  },
  "dependencies": {
    "b4a": "^1.6.7",
    "bare-buffer": "^3.1.4",
    "bare-fs": "^4.1.5",
    "bare-path": "^3.0.0",
    "bare-process": "^4.2.1",
    "corestore": "^7.4.2",
    "hyperdrive": "^12.3.0",
    "hyperswarm": "^4.11.7",
    "localdrive": "^2.2.0"
  }
}
