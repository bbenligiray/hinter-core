{
  "name": "hinter-core",
  "version": "0.0.1",
  "description": "A terminal application that is the reference implementation of the hinter protocol",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/bbenligiray/hinter-core"
  },
  "main": "index.js",
  "type": "module",
  "pear": {
    "name": "hinter-core",
    "type": "terminal"
  },
  "scripts": {
    "docker:build": "docker build -t bbenligiray/hinter-core .",
    "docker:generate-keys": "docker run -it --rm -v /app/node_modules -v .:/app bbenligiray/hinter-core npm run generate-keys",
    "docker:start": "docker run -it --rm -v ./data/peers:/app/data/peers -v ./.env:/app/.env bbenligiray/hinter-core",
    "generate-keys": "node src/generate-keys.js",
    "start": "pear run src/index.js"
  },
  "dependencies": {
    "b4a": "^1.6.7",
    "bare-buffer": "^3.1.4",
    "bare-fs": "^4.1.5",
    "bare-path": "^3.0.0",
    "bare-process": "^4.2.1",
    "corestore": "^7.4.2",
    "hyperdrive": "^12.3.0",
    "hyperswarm": "^4.11.7",
    "localdrive": "^2.2.0"
  }
}
